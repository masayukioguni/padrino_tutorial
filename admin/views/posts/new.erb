<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:posts, :index) %></li>
      <li class="active"><%= link_to pat(:new), url(:posts, :new) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:new) %> <% mt(:post) %></h2>
    <div class="inner">
      <% form_for :post, url(:posts, :create), :class => :form do |f| %>
        <%= partial "posts/form", :locals => { :f => f } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
